{{#partial "content"}}

  <div class="container-fluid">
      <div class="hero-form">
          <h1 class="mb-5">Create a Hero</h1>
  <form class="form" action="/hero/new" method="post">
      <div class="mb-3 ">
           <h6>Name:</h6>
           <input type="text" id="name" placeholder="Enter hero's name" name="hero name" required>
      </div>
          <div class="mb-3">
             <h6>Age:</h6>
              <input type="number" id="age"placeholder="Enter hero's age" name="hero age" required>
          </div>
              <div class="mb-3">
                  <h6>Special Power:</h6>
                  <input type="text" id="specialPowers" placeholder="Enter hero's specialPowers" name="hero specialPower" required>
              </div>
                   <div class="mb-3">
                       <h6>Weakness:</h6>
                       <input type="text" id="weakness" placeholder="Enter hero's weakness" name="hero weakness" required>
                   </div>

            <input class="btn" type="submit">
        </form>
  </div>
  </div>


{{/partial}}
{{> layout.hbs}}